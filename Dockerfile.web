# Build stage
FROM node:20-alpine AS builder

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8 --activate

WORKDIR /app

# Copy workspace config
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY tsconfig.base.json ./

# Copy package files for all workspaces
COPY packages/shared/package.json ./packages/shared/
COPY apps/web/package.json ./apps/web/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code
COPY packages/shared ./packages/shared
COPY apps/web ./apps/web

# Build shared package first
WORKDIR /app/packages/shared
RUN pnpm build

# Build Web
WORKDIR /app/apps/web
RUN pnpm build

# Verify build output exists
RUN ls -la /app/apps/web/.output/server/ && test -f /app/apps/web/.output/server/index.mjs

# Production stage - minimal, just the output
FROM node:20-alpine AS runner

WORKDIR /app

# Copy the entire .output directory (self-contained Nuxt build)
COPY --from=builder /app/apps/web/.output /app/.output

# Verify everything is in place
RUN ls -la /app/.output/server/ && test -f /app/.output/server/index.mjs

ENV NODE_ENV=production
ENV PORT=3000
ENV HOST=0.0.0.0
ENV NITRO_HOST=0.0.0.0
ENV NITRO_PORT=3000

EXPOSE 3000

# Run directly - no pnpm, no scripts, just node
CMD ["node", "/app/.output/server/index.mjs"]
