# Build stage - v2
FROM node:20-alpine AS builder

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8 --activate

WORKDIR /app

# Copy workspace config
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY tsconfig.base.json ./

# Copy package files for all workspaces
COPY packages/shared/package.json ./packages/shared/
COPY apps/web/package.json ./apps/web/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code
COPY packages/shared ./packages/shared
COPY apps/web ./apps/web

# Build shared package first
WORKDIR /app/packages/shared
RUN pnpm build

# Build Web
WORKDIR /app/apps/web
RUN pnpm build

# Verify build output exists
RUN ls -la .output/server/

# Production stage
FROM node:20-alpine AS runner

WORKDIR /app

# Copy package.json for Railway detection
COPY --from=builder /app/apps/web/package.json /app/package.json

# Copy the entire .output directory
COPY --from=builder /app/apps/web/.output /app/.output

# Verify the copy worked
RUN ls -la /app/.output/server/

ENV NODE_ENV=production
ENV PORT=3000
ENV HOST=0.0.0.0
ENV NITRO_HOST=0.0.0.0
ENV NITRO_PORT=3000

EXPOSE 3000

# Run the Nuxt server directly
CMD ["node", "/app/.output/server/index.mjs"]
